            copy tmplen read <
          end
          disc
        end
        39 renderer.setcolor
      end
      disc
      renderer.abuf read
      "\e[K" (str.catc)
      "\r\n" (str.catc)
      renderer.abuf swap put disc

      ret
    end

    ret
  end

  oper proc blit 0 0
